{
    "PORT": 8000,
    "app_root": "/sample_app",
    "app_url_domain": "samplecorp.com",
    "external_server_url": "https://localhost.sampleapp.com",
    "PID_FILE_PATH": "/var/run/nnn.pid",
    "platform": {
        "supported_locales": [
            "en-US",
            "en-GB",
            "fr-FR",
            "de-DE",
            "es-ES",
            "pt-PT",
            "da-DK",
            "nl-NL",
            "sv-SE",
            "zh-CN",
            "hi-IN",
            "it-IT",
            "ja-JP"
        ],
        "auth": {
            "session_cookie_password": "some strong session password  123456789012345678901234567890",
            "cookie_name": "sats",
            "on_auth_failure_redirect_to": "/sample_app/signin",
            "session_cookie_ttl": 15552000000,
            "session_validation_plugin": null
        },
        "visitor_tracking": {
            "vt_cookie_password": "some strong visitor tracking password 123456789012345678901234567890"
        },
        "csrf": {
            "csrf_header_password": "some strong CSRF password 123456789012345678901234567890",
            "csrf_header_name": "sa-decorator"
        },
        "locale_resolver": {},
        "static_resources_path": "./public"
    },
    "router": {
        "module": {
            "name": "/lib/router",
            "params": {}
        }
    },
    "extensions": [],
    "plugins": [{
        "module_path": "lib/plugins/v1/account_api",
        "module_options": {
            "app_id": "321123456",
            "app_secret": "secret-321123456"
        }
    }, {
        "module_path": "lib/plugins/v1/customer_api",
        "module_options": {
            "app_id": "321123456",
            "app_secret": "secret-321123456"
        }
    }, {
        "module_name": "hapi-swagger",
        "module_options": {
            "apiVersion": "V1.0",
            "protocol": "http",
            "documentationPath": "/api/swagger-ui",
            "endpoint": "/api/docs",
            "pathPrefixSize": 3,
            "info": {
                "title": "SampleApp REST API",
                "description": "The REST API published by SampleApp applications integration.",
                "termsOfServiceUrl": "http://www.samplecorp.com/terms-and-conditions",
                "contact": "support@samplecorp.com",
                "license": "SampleCorp license - TBD",
                "licenseUrl": "http://www.samplecorp.com/api-license"
            }
        }
    }],
    "app": {
        "session": {
            "session_duration": 3600
        },
        "third_party_oauth": {},
        "content": {
            "root_dir": ""
        },
        "database": {
            "host_seed": "localhost:27017",
            "login_id": "sa_db_user",
            "login_password": "sa_db_pwd",
            "connect_retry_millies": 5000,
            "database": "sa_db"
        }
    }
}
